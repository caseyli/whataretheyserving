<div class="hero-image-container">
	<%= image_tag "hero_960x400.png" %>
</div>

<h2>Latest Entries</h2>
<ul class="resource-list latest-entries">
	<% @latest_entries.each do |entry| %>
		<li><%= link_to "#{entry.date} - #{entry.description} at #{entry.location.company.name} - #{entry.location.city} - #{entry.location.address}", company_location_path(entry.location.company, entry.location) %></li>
	<% end %>
</ul>

<h2>Restaurants / Stores</h2>

<div class="main-companies-list">
	<ul class="resource-list">
		<% @companies.each do |company| %>
			<li><%= link_to company.name, company %></li>
		<% end %>
	</ul>
</div>

<div class="main-actions">
	<%= link_to "ADD NEW RESTAURANT/STORE", new_company_path, :class => "button" %><br>
</div>
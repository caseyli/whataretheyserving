<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street 1</th>
    <th>Street2</th>
    <th>City</th>
    <th>Prov state</th>
    <th>Postal zip</th>
    <th>Phone</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.street_1 %></td>
    <td><%= location.street2 %></td>
    <td><%= location.city %></td>
    <td><%= location.prov_state %></td>
    <td><%= location.postal_zip %></td>
    <td><%= location.phone %></td>
    <td><%= location.url %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

